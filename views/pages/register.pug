block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Connexion

        form(method='POST' action='/register')
            div.form-group
                label(for='email') Votre adresse email:
                input#email.form-control(type='email', placeholder='name@email.com' name='email')
            div.form-group
                label(for='pw') Votre mot de passe:
                input#pw.form-control(type='password' name='password')
            div.form-group
                label(for='pw2') Confirmer votre mot de passe:
                input#pw2.form-control(type='password' name='confirmPassword')
            button.btn.btn-primary(type='submit') Ok
